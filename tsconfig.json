{
  "include": ["src/**/*.ts", "rollup.config.ts"],
  "exclude": ["src/**/__mocks__/**/*.ts"],

  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "lib": ["ES2021", "DOM"]
  }
}

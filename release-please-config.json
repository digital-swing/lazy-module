{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "plugins": [
        "sentence-case"
    ],
    "packages": {
        ".": {
            "release-type": "simple",
            "bump-minor-pre-major": false,
            "bump-patch-for-minor-pre-major": false,
            "draft": false,
            "prerelease": false,
            "changelog-path": "CHANGELOG.md",
            "include-component-in-tag": false,
            "changelog-sections": [
                {
                    "type": "feat",
                    "section": "Added"
                },
                {
                    "type": "fix",
                    "section": "Fixed"
                },
                {
                    "type": "refactor",
                    "section": "Changed"
                },
                {
                    "type": "perf",
                    "section": "Optimizations"
                },
                {
                    "type": "docs",
                    "section": "Documentation"
                },
                {
                    "type": "style",
                    "hidden": true,
                    "section": "style"
                },
                {
                    "type": "chore",
                    "hidden": true,
                    "section": "chore"
                },
                {
                    "type": "test",
                    "hidden": true,
                    "section": "test"
                }
            ]
        }
    }
}